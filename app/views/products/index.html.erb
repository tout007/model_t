<h1>Products are comming soon!</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Discount</th>
      <th>Brand</th>
      <th>Description</th>
      <th>QuantityInStock</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.discount %></td>
        <td><%= product.brand %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity_in_stock %></td>

        <td><%= link_to "Show", product %></td>
        <td><%= link_to "Edit", edit_product_path(product) %></td>
        <td><%= link_to "Destory", product, method: :delete, data: {confirm: "Are you sure"} %></td> 
      </tr>
    <% end %>  
  </tbody>
</table>

<br>
<%= link_to "New product", new_product_path %>
